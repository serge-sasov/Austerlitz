<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/armies_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ru.serge.austerlitz.combat.CombatOutcomeView
            android:id="@+id/fireResultView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

        </ru.serge.austerlitz.combat.CombatOutcomeView>

        <TextView
            android:id="@+id/missText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="25sp"
            android:layout_weight="1"
            android:fontFamily="@font/marckscript_regular"
            android:gravity="center"
            android:text="@string/o_no_miss"
            android:textColor="#991217"
            android:textSize="32sp"
            android:textStyle="bold"
            app:fontFamily="@font/marckscript_regular" />

        <Button
            android:id="@+id/btnOK"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/close" />
    </LinearLayout>
</RelativeLayout>